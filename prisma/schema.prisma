// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id       String    @id
  githubId Int       @unique
  Profile  Profile?
  Session  Session[]
  Bots     Bot[]
}

model Profile {
  id           String  @id
  User         User    @relation(fields: [id], references: [id])
  displayName String
  email        String? @unique
}

model Bot {
  id         String     @id @default(uuid())
  botName    String
  avatar     Json?
  developers User[]
  apiTokens  ApiToken[]
}

model ApiToken {
  token   String    @id @default(uuid())
  name    String?
  Bot     Bot       @relation(fields: [botId], references: [id])
  botId   String
  temp    Boolean   @default(false)
  expires DateTime?
}

model RoomKey {
  key       String  @id
  singleUse Boolean @default(false)
  roomId    String
}
